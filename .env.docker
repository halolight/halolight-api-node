# Docker 环境变量配置

# Server
NODE_ENV=production
PORT=3001

# PostgreSQL
POSTGRES_DB=halolight
POSTGRES_USER=halolight
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_PORT=5432

# Database URL (自动生成，无需手动修改)
DATABASE_URL=postgresql://halolight:change_me_in_production@postgres:5432/halolight?schema=public

# JWT (必须修改为强密码)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-me
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-secret-key-minimum-32-characters-long-change-me
REFRESH_TOKEN_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=*

# 共享数据库配置示例（多个 API 服务共享）:
# DATABASE_URL=postgresql://halolight:password@host.docker.internal:5432/halolight?schema=public
# 注意: 所有 API 服务必须使用相同的 JWT_SECRET 和 REFRESH_TOKEN_SECRET
